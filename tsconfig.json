{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "types": ["./root.d.ts"],
    "strictPropertyInitialization": false
  },
  "include": ["src"]
}
